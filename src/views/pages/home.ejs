<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WhatsApp Home</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      background-color: #f0f2f5;
    }
    a{
        text-decoration: none;
        color: white;
    }
    .chat-list {
      overflow-y: auto;
      max-height: calc(100vh - 60px);
    }
    .chat-item {
      cursor: pointer;
      transition: background 0.2s;
    }
    .chat-item:hover {
      background-color: #ebebeb;
    }
    .chat-avatar img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }
    .chat-body {
      flex: 1;
    }
    .chat-header {
      font-weight: bold;
    }
    .chat-preview {
      font-size: 0.9rem;
      color: #888;
    }
    .chat-time {
      font-size: 0.8rem;
      color: #aaa;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="navbar navbar-light bg-success text-white px-3">
    <div class="d-flex align-items-center">
      <div class="me-3">
        <a href="/profile"><i class="fas fa-user-circle fa-2x"></i></a>
      </div>
      <h1 class="navbar-brand mb-0 h5">WhatsApp</h1>
    </div>
    <div class="d-flex">
      <button class="btn btn-success text-white me-2">
        <i class="fas fa-search"></i>
      </button>
      <button class="btn btn-success text-white">
        <i class="fas fa-ellipsis-v"></i>
      </button>
    </div>
  </header>

  <!-- Chat List -->
  <div class="container-fluid px-0">
    <div class="row">
      <div class="col-md-4 border-end chat-list">
        <% chats.forEach(chat => { %>
        <div class="chat-item d-flex align-items-center p-3 border-bottom">
          <div class="chat-avatar me-3">
            <img src="<%= chat.avatar %>" alt="Avatar">
          </div>
          <div class="chat-body">
            <div class="d-flex justify-content-between">
              <span class="chat-header"><%= chat.name %></span>
              <span class="chat-time"><%= chat.time %></span>
            </div>
            <span class="chat-preview"><%= chat.lastMessage %></span>
          </div>
        </div>
        <% }); %>
      </div>
      <div class="col-md-8 d-none d-md-block">
        <div class="d-flex justify-content-center align-items-center h-100 text-muted">
          <p>Select a chat to view messages</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Include Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
